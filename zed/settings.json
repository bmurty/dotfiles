{
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "tabs": {
    "show_close_button": "hidden",
    "show_diagnostics": "errors",
    "activate_on_close": "left_neighbour",
    "close_position": "right",
    "file_icons": true,
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 500,
    "scroll_debounce_ms": 500,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "toggle_on_modifiers_press": {
      "control": false,
      "shift": false,
      "alt": true,
      "platform": false,
      "function": false,
    },
  },
  "rounded_selection": false,
  "preview_tabs": {
    "enable_preview_file_from_code_navigation": false,
    "enable_preview_from_multibuffer": false,
    "enable_preview_from_project_panel": false,
    "enabled": false,
  },
  "seed_search_query_from_cursor": "selection",
  "close_on_file_delete": true,
  "search": {
    "center_on_match": true,
  },
  "indent_guides": {
    "coloring": "indent_aware",
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": false,
  },
  "autosave": "on_focus_change",
  "show_whitespaces": "trailing",
  "tab_size": 2,
  "agent_ui_font_size": 20.0,
  "edit_predictions": {
    "disabled_globs": ["~/.**"],
    "mode": "subtle",
  },
  "toolbar": {
    "code_actions": true,
  },
  "minimap": {
    "thumb": "always",
    "show": "never",
  },
  "scrollbar": {
    "show": "always",
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "error",
    "axes": {
      "horizontal": false,
      "vertical": true,
    },
  },
  "inline_code_actions": true,
  "gutter": {
    "folds": false,
    "breakpoints": false,
  },
  "autoscroll_on_clicks": true,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 5,
  "git_panel": {
    "status_style": "label_color",
    "button": true,
  },
  "icon_theme": "VSCode Icons for Zed (Light Angular)",
  "auto_update": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/node_modules",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.settings",
  ],
  "calls": {
    "mute_on_join": true,
  },
  "git": {
    "path_style": "file_path_first",
    "git_gutter": "tracked_files",
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "min_column": 5,
      "enabled": true,
      "show_commit_summary": false,
      "delay_ms": 500,
    },
  },
  "base_keymap": "Atom",
  "disable_ai": false,
  "buffer_font_family": "CommitMono",
  "agent": {
    "enable_feedback": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1",
    },
    "model_parameters": [],
  },
  "context_servers": {
    "mcp-server-github": {
      "enabled": true,
      "settings": {
        "github_personal_access_token": "",
      },
    },
  },
  "buffer_line_height": "standard",
  "buffer_font_weight": 500.0,
  "ui_font_size": 18.0,
  "line_indicator_format": "long",
  "buffer_font_size": 20.0,
  "diagnostics": { "button": false },
  "collaboration_panel": { "button": false },
  "title_bar": {
    "show_branch_icon": false,
    "show_menus": true,
    "show_onboarding_banner": false,
  },
  "debugger": {
    "button": true,
  },
  "notification_panel": {
    "button": false,
  },
  "terminal": {
    "shell": {
      "program": "/bin/bash",
    },
    "keep_selection_on_copy": false,
    "option_as_meta": false,
    "dock": "bottom",
    "default_height": 350,
    "max_scroll_history_lines": 10000,
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": true,
    "indent_guides": {
      "show": "never",
    },
    "show_diagnostics": "errors",
    "default_width": 300.0,
    "hide_gitignore": true,
    "auto_fold_dirs": true,
    "indent_size": 15,
    "starts_open": false,
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Dark",
    "mode": "dark",
  },
  "excerpt_context_lines": 5,
  "theme_overrides": {
    "One Dark": {
      "background": "#000",
      "border": "#333",
      "border.variant": "#333",
      "border.focused": "#fff",
      "border.selected": "#fff",
      "border.transparent": "#000",
      "border.disabled": "#222",
      "elevated_surface.background": "#000",
      "surface.background": "#000",
      "element.background": "#000",
      "status_bar.background": "#000",
      "title_bar.background": "#000",
      "title_bar.inactive_background": "#000",
      "toolbar.background": "#000",
      "tab.inactive_background": "#000",
      "tab.active_background": "#111",
      "panel.background": "#000",
      "editor.background": "#000",
      "editor.gutter.background": "#000",
      "editor.subheader.background": "#000",
      "editor.active_line.background": "#000",
      "editor.highlighted_line.background": "#000",
      "editor.line_number": "#333",
      "editor.active_line_number": "#fff",
      "tab_bar.background": "#000",
      "terminal.background": "#000",
      "terminal.foreground": "#fff",
      "accents": [
        "#44BBA4",
        "#E7BB41",
        "#F16567",
        "#F16567",
        "#8F6593",
        "#F16567",
        "#A6B1E1",
      ],
    },
  },
  "auto_install_extensions": {
    "codeowners": true,
    "csv": true,
    "desktop": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "log": true,
    "make": true,
    "mcp-server-github": true,
    "php": true,
    "python-requirements": true,
    "rainbow-csv": true,
    "sql": true,
    "toml": true,
    "vscode-icons": true,
  },
  "lsp": {
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["deno.json", "deno.jsonc"],
              "url": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
            },
            {
              "fileMatch": ["package.json"],
              "url": "https://www.schemastore.org/package",
            },
          ],
        },
      },
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemas": [
            {
              "fileMatch": [".github/*.yml", ".github/**/*.yml"],
              "url": "https://www.schemastore.org/github-workflow",
            },
            {
              "fileMatch": ["docker-compose.yml"],
              "url": "https://raw.githubusercontent.com/compose-spec/compose-go/master/schema/compose-spec.json",
            },
          ],
        },
      },
    },
  },
}
